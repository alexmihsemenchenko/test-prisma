

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String   
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())

  logs AuditLog[]
}

model Product {
  id        String   @id @default(uuid())
  name      String
  sku       String   @unique
  price     Decimal
  createdAt DateTime @default(now())

  inventory InventoryItem?
  logs      AuditLog[]
}

model InventoryItem {
  id        String   @id @default(uuid())
  quantity  Int
  productId String   @unique
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id])
}

model AuditLog {
  id        String      @id @default(uuid())
  action    AuditAction
  entity    String
  entityId  String
  userId    String?
  createdAt DateTime    @default(now())

  user    User?    @relation(fields: [userId], references: [id])
  product Product? @relation(fields: [entityId], references: [id])
}
